<%- include("header") -%>
  <div class="mb-5"></div>
  <h2 class="text-center mb-0 text-light fw-bold">
    <%= currentList.title %>
      <div class="dropdown text-center mb-3 div-inline">
        <a type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-arrow-down-short"></i>
        </a>
        <ul class="dropdown-menu">
          <form action="/deleteList" method="post">
            <li>
              <button class="dropdown-item text-center" name="listID" value="<%= currentList.id %>"
                type="submit">Delete List <i class="bi bi-radioactive"></i></button>
            </li>
          </form>
        </ul>
      </div>
  </h2>
  <div class="container-fluid text-center">
    <div class="row justify-content-center">
      <div class="col-10 col-md-8 col-lg-7">
        <p class="text-light">
          <%= currentList.description %>
        </p>
        <ul class="list-group lead">
          <% currentList.items.forEach(function (listItem) { %>
            <li class="list-group-item">
              <div class="row justify-content-between align-items-center">
                <div class="col-9 col-md-8 col-lg-5 text-start"><label class="form-check-label ">
                    <%= listItem.name %>
                  </label></div>

                <div class="col-3 col-md-2 col-lg-1">
                  <form action="/deleteItem" method="post">
                  <button class="remove-button-style" type="submit" name="listID" value="<%= currentList.id %>"><i
                      class="bi bi-x-circle"></i></button>
                  <input type="hidden" name="itemID" value="<%= listItem.id %>">
                  </form>
                </div>


              </div>
            </li>
            <% }); %>
              <li class="list-group-item">
                <form action="/addItem" method="post">
                  <div class="form-group">
                    <div class="row justify-content-between align-items-center">
                      <div class="col-9 col-md-8 col-lg-5">
                        <input type="text" class="form-control" name="itemName" placeholder="New Item">
                      </div>
                      <div class="col-3 col-md-2 col-lg-1">
                        <button class="remove-button-style" type="submit" name="listName"
                          value="<%= currentList.title %>"><i class="bi bi-arrow-right-circle-fill"></i></button>
                      </div>
                    </div>
                  </div>
                </form>
              </li>
        </ul>
      </div>
    </div>
  </div>

  <%- include("footer") -%>